<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", invoices_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_invoice_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", invoice_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.invoice.business_id", :default => t("activerecord.labels.business_id", :default => "Business")) %>:</b>
          <%= @invoice.business_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.invoice.consigner_id", :default => t("activerecord.labels.consigner_id", :default => "Consigner")) %>:</b>
          <%= @invoice.consigner_id %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_invoice_path(@invoice), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", invoice_path(@invoice), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>