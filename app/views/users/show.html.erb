<div class="block">
  <div class="content">
    <div class="inner">
      
			<h2><%= @user.first_name %> <%= @user.last_name %></h2>
			<p>
				<strong>Username: </strong><%= @user.username %><br />
				<strong>Email Address: </strong><%= @user.email %>
			</p>
			
			<h3>User Businesses:</h3>
			<table class="table">
        <tr>             
          <th class="first">ID</th>
					<th>Name</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @businesses.each do |business| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= business.id %></td>
					<td><%= link_to business.name, business_path(business) %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", business_path(business) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_business_path(business) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", business_path(business), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit User")}")} #{t("web-app-theme.edit", :default=> "Edit User")}", edit_user_path(@user), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete User")}")} #{t("web-app-theme.delete", :default => "Delete User")}", user_path(@user), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>