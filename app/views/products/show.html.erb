<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", business_products_path(@business)  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_business_product_path(@business) %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.product.code", :default => t("activerecord.labels.code", :default => "Code")) %>:</b>
          <%= @product.code %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @product.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @product.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.wholesale", :default => t("activerecord.labels.wholesale", :default => "Wholesale")) %>:</b>
          <%= @product.wholesale %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.retail", :default => t("activerecord.labels.retail", :default => "Retail")) %>:</b>
          <%= @product.retail %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.consigner_id", :default => t("activerecord.labels.consigner_id", :default => "Consigner")) %>:</b>
          <%= @product.consigner_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product.business_id", :default => t("activerecord.labels.business_id", :default => "Business")) %>:</b>
          <%= @product.business_id %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_business_product_path(@business, @product), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", business_product_path(@business, @product), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>