<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
	    <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", consigners_path  %></li>
  		<li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_consigner_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Consigners</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					<th>Name</th>
					<th>Business Name</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @consigners.each do |consigner| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= consigner.id %></td>
					<td><%= link_to consigner.name, consigner_path(consigner) %></td>
					<td><%= consigner.biz_name %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", consigner_path(consigner) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_consigner_path(consigner) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", consigner_path(consigner), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>