<div class="block">
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Consigners</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					<th>Name</th>
					<th>Business Name</th>
					<th>Current Total</th>
					<th>Invoiced</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @consigners.each do |consigner| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= consigner.id %></td>
					<td><%= link_to consigner.name, consigner_path(consigner) %></td>
					<td><%= consigner.biz_name %></td>
					<td><%= consigner.total_this_period %></td>
					<td><%= link_to consigner.last_invoice.date, invoice_path(consigner.last_invoice) if consigner.last_invoice %></td>
          <td class="last">
            <%= link_to "Invoice!", consigner_path(consigner) + "/invoice", :confirm => "#{t("web-app-theme.confirm", :default => "Invoice #{consigner.name}?")}"%>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>