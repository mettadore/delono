<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", businesses_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_business_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_business_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.edit", :default => "Edit") %> Business</h2>
    <div class="inner">
			<% semantic_form_for @business, :html => {:multipart => true} do |f| -%>
					<% f.inputs do %>
					<%= f.input :name, :label => "Business Name" %>
					<%= f.input :subdomain, :label => "Subdomain" %>
					<%= f.input :street %>
					<%= f.input :street_2, :label => "Street (additional)"%>
					<%= f.input :city %>
					<%= f.input :state %>
					<%= f.input :zipcode %>
					<%= f.input :email %>
					<%= f.input :website %>
					<%= f.input :fax %>
					<%= f.input	:photo, :as => :file %>
				<% end %>
				<%= f.buttons %>
			<% end %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>